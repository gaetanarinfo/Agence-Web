{% extends "base.html.twig" %}

{% block title 'Inscription' %}

{% block body %}

    {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center" style="width: 29% !important; margin: 0 auto;">
                <i class="fa fa-check text-success" aria-hidden="true"></i> {{ message }}
            </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
            <div class="alert alert-danger text-center" style="width: 29% !important; margin: 0 auto;">
                <i class="fa fa-times text-danger" aria-hidden="true"></i> {{ message }}
            </div>
    {% endfor %}

    <div class="container mt-4 mb-4 w-25">

    <div class="m-auto text-center">
        <img class="mb-4" src="/images/cropped-icone.png" alt="" width="72" height="72">
    </div>

    <div class="text-center title-form mb-2">
        <h3>Inscription</h3>
    </div>

    <hr class="mb-3" />

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.username) }}
    </div>
    <div class="form-group">    
        {{ form_row(form.email) }}
    </div>
    <div class="form-group">    
        {{ form_row(form.password.first) }}
    </div>
    <div class="form-group">    
        {{ form_row(form.password.second) }}
    </div>
    <div class="form-group">    
        {{ form_row(form.phone) }}
    </div>
    <div class="form-group">    
        {{ form_row(form.mobile) }}
    </div>
    <div class="form-group">    
        {{ form_row(form.pictureFiles) }}
    </div>
    {{ form_rest(form) }}
    <div class="text-center">
        <button class="button-submit">S'inscrire</button>
    </div>    
    {{ form_end(form) }}

    </div>
{% endblock %}