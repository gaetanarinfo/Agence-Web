{% extends "base.html.twig" %}

{% block title globals.title ~ ' Mon profil' %}

{% block body %}

	<style>
		.card {
			box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
		}

		.card {
			position: relative;
			display: flex;
			flex-direction: column;
			min-width: 0;
			word-wrap: break-word;
			background-color: #fff;
			background-clip: border-box;
			border: 0 solid rgba(0, 0, 0, 0.125);
			border-radius: 0.25rem;
		}

		.card-body {
			flex: 1 1 auto;
			min-height: 1px;
			padding: 1rem;
		}

		.gutters-sm {
			margin-right: -8px;
			margin-left: -8px;
		}

		.gutters-sm > .col,
		.gutters-sm > [class*=col-] {
			padding-right: 8px;
			padding-left: 8px;
		}
		.mb-3,
		.my-3 {
			margin-bottom: 1rem !important;
		}

		.bg-gray-300 {
			background-color: #e2e8f0;
		}
		.h-100 {
			height: 100% !important;
		}
		.shadow-none {
			box-shadow: none !important;
		}
	</style>

	<div class="container mt-4 mb-4">
		<div class="main-body">
			<form name="user_type3" method="post">
				<div class="row gutters-sm">
					<div class="col-md-4 mb-3">
						<div class="card">
							<div class="card-body">
								<div class="d-flex flex-column align-items-center text-center">

									{% if app.user.pictures is empty %}
										<img src="{{ '/images/default_profil.png' }}" alt="{{ app.user.username }}" class="rounded-circle" width="150"/>
									{% else %}
										{% for picture in app.user.pictures %}
											<img src="{{ vich_uploader_asset(picture, 'imageFile') }}" alt="{{ app.user.username }}" class="rounded-circle" width="150"/>
										{% endfor %}
									{% endif %}

									<div class="mt-3">
										<h4>{{ app.user.username }}</h4>
										{% for role in app.user.roles %}
											{% if role == "ROLE_USER" %}
												<p class="text-secondary mb-1">Utilisateur</p>
											{% elseif role == "ROLE_PRO" %}
												<p class="text-secondary mb-1">Professionnel</p>
											{% elseif role == "ROLE_SUPER_ADMIN" %}
												<p class="text-secondary mb-1">Administrateur</p>
											{% endif %}
										{% endfor %}
										<p class="text-muted font-size-sm">{{ app.user.city}},
											{{ app.user.postalCode}}</p>
										<div>
											<a href='{{ path('profil') }}' class="btn btn-primary">Retour à mon profil</a>
										</div>
										<div>
											{# <a href='{{ path('user.remove') }}' class="btn btn-danger mt-2">Supprimer mon compte</a> #}
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="card mt-3">
							<ul class="list-group list-group-flush">
                  {% if app.user.link != null %}
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>Site internet</h6>
                    <span class="text-secondary"><a class="text-secondary" href="{{ app.user.link }}" target="_blank">{{ app.user.link }}</a></span>
                  </li>
                  {% endif %}
                  {% if app.user.twitter != null %}
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</h6>
                    <span class="text-secondary"><a class="text-secondary" href="https://twitter.com/{{ app.user.twitter }}" target="_blank">{{ app.user.twitter }}</a></span>
                  </li>
                  {% endif %}
                  {% if app.user.instagram != null %}
                  <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                    <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>Instagram</h6>
                    <span class="text-secondary"><a class="text-secondary" href="https://www.instagram.com/{{ app.user.instagram }}/?hl=fr/" target="_blank">{{ app.user.instagram }}</a></span>
                  </li>
                  {% endif %}
                  {% if app.user.facebook != null %}
                    <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                      <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</h6>
                      <span class="text-secondary"><a class="text-secondary" href="https://fr-fr.facebook.com/{{ app.user.facebook }}" target="_blank">{{ app.user.facebook }}</a></span>
                    </li>
                  {% endif %}
                </ul>
						</div>
					</div>

					<div class="col-md-8">
						<div class="card mb-3">
							<div class="card-body">
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Nom</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.lastname, { 'value': app.user.lastname }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Prénom</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.firstname, { 'value': app.user.firstname }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Téléphone</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.phone, { 'value': app.user.phone }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Mobile</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.mobile, { 'value': app.user.mobile }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Sexe</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.gender, { 'value': app.user.gender }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Adresse</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.address, { 'value': app.user.address }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Ville</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.city, { 'value': app.user.city }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Code postal</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.postalCode, { 'value': app.user.postalCode }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Pays</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.country, { 'value': app.user.country }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Site internet</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.link, { 'value': app.user.link }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">twitter</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.twitter, { 'value': app.user.twitter }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Instagram</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.instagram, { 'value': app.user.instagram }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Facebook</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.facebook, { 'value': app.user.facebook }) }}
									</div>
								</div>
								<hr>
								<div class="row">
									<div class="col-sm-3">
										<h6 class="mb-0">Biographie</h6>
									</div>
									<div class="col-sm-9 text-secondary">
										{{ form_row(form.biography, { 'value': app.user.biography }) }}
									</div>
								</div>
								<hr>
								<div class="row" style="justify-content: space-around;">
									<div class="col-sm-12">
										<button class="button-submit">{{ button|default('Enregistrer') }}</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	{% endblock %}
