<div class="mt-4 mb-4 w-75 m-auto">
	{{ form_start(form) }}
	<div class="col-md-12">
		<div class="row" style="justify-content: center;">
			<div class="col-md-5">{{ form_row(form.username) }}</div>
			<div class="col-md-5">{{ form_row(form.email) }}</div>
			<div class="col-md-5">{{ form_row(form.password) }}</div>
			<div class="col-md-3">{{ form_row(form.isActive) }}</div>
			<div class="col-md-3">{{ form_row(form.gender) }}</div>
		</div>
		<div class="row" style="justify-content: center;">	
			<div class="col-md-5">{{ form_row(form.lastname) }}</div>
			<div class="col-md-5">{{ form_row(form.firstname) }}</div>
			<div class="col-md-5">{{ form_row(form.pictureFiles) }}</div>
		</div>
		<div class="row" style="justify-content: center;">	
			<div class="col-md-5">{{ form_row(form.address) }}</div>
			<div class="col-md-3">{{ form_row(form.city) }}</div>
			<div class="col-md-2">{{ form_row(form.postalCode) }}</div>
		</div>
		<div class="row" style="justify-content: center;">	
			<div class="col-md-3">{{ form_row(form.country) }}</div>
			<div class="col-md-3">{{ form_row(form.phone) }}</div>
			<div class="col-md-3">{{ form_row(form.mobile) }}</div>
		</div>	
		<div class="row" style="justify-content: center;">	
			<div class="col-md-3">{{ form_row(form.link) }}</div>
			<div class="col-md-3">{{ form_row(form.twitter) }}</div>
			<div class="col-md-3">{{ form_row(form.instagram) }}</div>
			<div class="col-md-3">{{ form_row(form.facebook) }}</div>
		</div>	
		<div class="row" style="justify-content: center;">	
			<div class="col-md-2">{{ form_row(form.roles) }}</div>
		</div>	
	</div>

	<div class="row mb-4">
		<div class="col-md-12">
			<div class="row" style="justify-content: center;">
				{% for image in user.images %}
					<div class="" style="margin: 0 auto;">
						<img class="img-thumbnail" src="{{ vich_uploader_asset(picture, 'imageFile') }}" width="150" alt="" style="position: relative;display: flex;margin: 0 auto;justify-content: space-around;">
						<div style="position: relative;display: flex;margin: 0 auto;justify-content: space-around;">
							<a href="{{ path('admin.user.deleteImage', {id: picture.id})}}" class="btn btn-danger mt-2">Supprimer</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>		

	{{ form_rest(form) }}
	<div class="row mb-4">
		<div class="m-auto">
			<div class="row" style="justify-content: space-around;">
				<button class="button-submit">{{ button|default('Enregistrer') }}</button>
			</div>
		</div>
	</div>	
	{{ form_end(form) }}
</div>