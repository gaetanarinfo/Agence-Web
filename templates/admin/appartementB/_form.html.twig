<div class="mt-4 mb-4 w-75 m-auto">
	{{ form_start(form) }}
	<div class="col-md-12">
		<div class="row" style="justify-content: center;">
			<div class="col-md-5">{{ form_row(form.title) }}</div>
			<div class="col-md-2">{{ form_row(form.surface) }}</div>
			<div class="col-md-2">{{ form_row(form.price) }}</div>
			<div class="col-md-2">{{ form_row(form.rooms) }}</div>
		</div>
	</div>

	<div class="col-md-12">
		<div class="row" style="justify-content: center;">	
			<div class="col-md-2">{{ form_row(form.bedrooms) }}</div>
			<div class="col-md-2">{{ form_row(form.heat) }}</div>
			<div class="col-md-2">{{ form_row(form.floor) }}</div>
			<div class="col-md-4">{{ form_row(form.options) }}</div>
		</div>
	</div>

	<div class="col-md-12">
		<div class="row" style="justify-content: center;">
			<div class="col-md-8">{{ form_row(form.pictureFiles) }}</div>
		</div>
	</div>

	<div class="col-md-12">
		<div class="row" style="justify-content: center;">
			<div class="col-md-2 mt-2 mb-2">{{ form_row(form.available) }}</div>
		</div>
	</div>

	<div class="col-md-12">
		<div class="row" style="justify-content: center;">
			<div class="col-md-4">{{ form_row(form.address) }}</div>
			<div class="col-md-3">{{ form_row(form.city) }}</div>
			<div class="col-md-3">{{ form_row(form.postal_code) }}</div>
		</div>
	</div>

	<div class="col-md-12">
		<div class="row" style="justify-content: center;">
			<div class="col-md-10">{{ form_row(form.content) }}</div>
		</div>
	</div>	
	
	<div class="row mb-4">
		<div class="col-md-12">
			<div class="row" style="justify-content: center;">
				{% for picture in appartementB.pictures %}
					<div class="" style="width: 300px; margin: 5px;">
						<img class="img-thumbnail" src="{{ vich_uploader_asset(picture, 'imageFile') }}" width="100%" alt="">
						<div style="position: relative;display: flex;margin: 0 auto;justify-content: space-around;">
							<a href="{{ path('admin.picture5.delete', {id: picture.id}) }}" class="btn btn-danger mt-2" data-delete data-token="{{ csrf_token('delete' ~ picture.id) }}">Supprimer</a>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>	

	{{ form_rest(form) }}
	<div class="row mb-4">
		<div class="m-auto">
			<div class="row" style="justify-content: space-around;">
				<button class="button-submit">{{ button|default('Enregistrer') }}</button>
			</div>
		</div>
	</div>	
	{{ form_end(form) }}
</div>