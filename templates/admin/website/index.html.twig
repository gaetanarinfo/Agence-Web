{% extends "base.html.twig" %}

{% block title 'Gérer le site internet' %}

{% block body %}

    <div class="container mt-4 mb-4 w-50">

        <p class="title-cont">Gérer le site internet</p>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">
                <i class="fa fa-check text-success" aria-hidden="true"></i> {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger text-center">
                <i class="fas fa-times text-danger" aria-hidden="true"></i> {{ message }}
            </div>
        {% endfor %}
        <p class="title-cont text-center">Header</p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre du site internet</th>
                    <th>Action</th>
                </tr>    
            </thead>
            <tbody>
            {% for websites in websiteHeader %}
                <tr>
                    <td style="vertical-align: middle;">{{ websites.webTitle }}</td>
                    <td style="vertical-align: middle;">
                        <a href="{{ path('admin.website.editHeader', {id: websites.id}) }}" class="btn btn-primary">Editer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <p class="title-cont text-center">Footer</p>
        <table class="table table-striped w-75">
            <thead>
                <tr>
                    <th>Facebook</th>
                    <th>Twitter</th>
                    <th>Instagram</th>
                    <th>Linkedin</th>
                    <th>Adresse</th>
                    <th>Téléphone</th>
                    <th>Action</th>
                </tr>    
            </thead>
            <tbody>
            {% for websites in websiteFooter %}
                <tr>
                    <td style="vertical-align: middle;">{{ websites.facebook }}</td>
                    <td style="vertical-align: middle;">{{ websites.twitter }}</td>
                    <td style="vertical-align: middle;">{{ websites.instagram }}</td>
                    <td style="vertical-align: middle;">{{ websites.linkedin }}</td>
                    <td style="vertical-align: middle;">{{ websites.address }}</td>
                    <td style="vertical-align: middle;">0{{ websites.phone }}</td>
                    <td style="vertical-align: middle;">
                        <a href="{{ path('admin.website.editFooter', {id: websites.id}) }}" class="btn btn-primary">Editer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}