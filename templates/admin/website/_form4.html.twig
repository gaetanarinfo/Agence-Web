<div class="mt-4 mb-4 w-75 m-auto">
	{{ form_start(form) }}
	<div class="col-md-12">
		<div class="row" style="justify-content: center;">
			<div class="col-md-5">{{ form_row(form.button1) }}</div>
			<div class="col-md-5">{{ form_row(form.button2) }}</div>
		</div>

		<div class="row" style="justify-content: center;">
			<div class="col-md-5">{{ form_row(form.button3) }}</div>
			<div class="col-md-5">{{ form_row(form.button4) }}</div>
		</div>

		<div class="row" style="justify-content: center;">
            <div class="col-md-5">{{ form_row(form.link1) }}</div>
			<div class="col-md-5">{{ form_row(form.link2) }}</div>
		</div>

		<div class="row" style="justify-content: center;">
            <div class="col-md-5">{{ form_row(form.link3) }}</div>
			<div class="col-md-5">{{ form_row(form.link4) }}</div>
		</div>
	</div>

	{{ form_rest(form) }}

	<div class="row mb-4">
		<div class="m-auto">
			<div class="row" style="justify-content: space-around;">
				<button class="button-submit">{{ button|default('Enregistrer') }}</button>
			</div>
		</div>
	</div>	
	{{ form_end(form) }}
</div>