<div class="mt-4 mb-4 w-75 m-auto">
	{{ form_start(form) }}
	<div class="col-md-12">
		<div class="row" style="justify-content: center;">
			<div class="col-md-5">{{ form_row(form.facebook) }}</div>
			<div class="col-md-5">{{ form_row(form.twitter) }}</div>
		</div>

		<div class="row" style="justify-content: center;">
			<div class="col-md-5">{{ form_row(form.instagram) }}</div>
			<div class="col-md-5">{{ form_row(form.linkedin) }}</div>
		</div>

		<div class="row" style="justify-content: center;">
			<div class="col-md-5">{{ form_row(form.address) }}</div>
			<div class="col-md-5">{{ form_row(form.phone) }}</div>
		</div>

		<div class="row" style="justify-content: center;">
			<div class="col-md-5">{{ form_row(form.postalCode) }}</div>
			<div class="col-md-5">{{ form_row(form.city) }}</div>
		</div>

		<div class="row" style="justify-content: center;">
			<div class="col-md-12">{{ form_row(form.copyright) }}</div>
		</div>
	</div>

	{{ form_rest(form) }}

	<div class="row mb-4">
		<div class="m-auto">
			<div class="row" style="justify-content: space-around;">
				<button class="button-submit">{{ button|default('Enregistrer') }}</button>
			</div>
		</div>
	</div>	
	{{ form_end(form) }}
</div>