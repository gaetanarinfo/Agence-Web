<div class="card card-per shadow-sm">
  {% if rent.picture %}
    <img src="{{ vich_uploader_asset(rent.picture, 'imageFile') }}" alt="card-img-top" style="width: 100%; height:auto;">
    {% else %}
      <img src="{{ '/images/empty.jpg' }}" alt="card-img-top" style="width: 100%; height:auto;">
  {% endif %}
  <div class="card-body">
    <h5 class="card-title">
      <a href="{{ path('rent.show', {slug: rent.slug, id: rent.id}) }}">
        {{ rent.title }}
      </a>
    </h5>
    <p class="card-text">{{ rent.surface }} m² - {{ rent.city }} ({{ rent.postalCode }})</p>
    <div class="text-success card-foot mb-3">
      {{ rent.formattedPrice }} €
    </div>
    <div class="d-flex justify-content-between align-items-center mt-2">
      <div class="btn-group">
        <a href="" class="btn btn-outline-info nav-link text-black text-bold">Voir le bien</a>
      </div>
    </div>
  </div>
</div>