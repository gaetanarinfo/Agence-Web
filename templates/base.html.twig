<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ globals.title }}{% endblock %}</title>

        <!-- Primary Meta Tags -->
        <meta name="description" content="{% block description %}{{ globals.description }}{% endblock %}">

        <meta name="keywords" content="immobilier, appartement, maison, parking, immeuble, louer, acheter, location, vente, gestion, achat, syndic, copropri&eacute;t&eacute;" />
        <meta name="robots" content="index, follow" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website">
        <meta property="og:url" content="https://agence-web.website{% block url %}{% endblock %}">
        <meta property="og:title" content="{% block title2 %}{{ globals.title }}{% endblock %}">
        <meta property="og:description" content="{% block description2 %}{{ globals.description }}{% endblock %}">
        <meta property="og:image" content="{{ '/images/ban.jpg' }}">

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image">
        <meta property="twitter:url" content="https://agence-web.website{% block url2 %}{% endblock %}">
        <meta property="twitter:title" content="{% block title3 %}{{ globals.title }}{% endblock %}">
        <meta property="twitter:description" content="{% block description3 %}{{ globals.description }}{% endblock %}">
        <meta property="twitter:image" content="{{ '/images/ban.jpg' }}">
        
        <!-- Favicon -->
        <link rel="icon" type="image/png" href="{{ globals.websiteUrl }}images/favicon.png" />

        <link rel="stylesheet" href="{{ globals.WebSiteUrl }}css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ globals.WebSiteUrl }}css/select2.min.css">
        <!-- Google Fonts -->
        <link
        href="{{ globals.WebSiteUrl }}css/css.css"
        rel="stylesheet"
        />
        <!-- MDB -->
        <link
        href="{{ globals.WebSiteUrl }}css/mdb.min.css"
        rel="stylesheet"
        />
        <!-- DateTimePicker -->
        <link rel="stylesheet" type="text/css" href="{{ globals.WebSiteUrl }}css/DateTimePicker.css" />  
        <link href="{{ globals.WebSiteUrl }}css/mapbox-gl.css" rel="stylesheet" />
        <link rel="stylesheet" href="{{ asset('build/app.css') }}"></link>

        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id={{ globals.google }}"></script>
        {% set globalKey = globals.google %}
        <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', "{{ globalKey }}");
        </script>

        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>

        {{ include('component/navbar.html.twig') }}

        <div class="jumbotron text-center jumb-head" style="background: url('{{ globals.WebSiteUrl }}{{ globals.backgroundHeader }}')">
            <div class="head-title">
                <h1 class="mt-5">{{ globals.title }}</h1>
                <p class="mt-5">{{ globals.description }}</p>
            </div>
        </div>

        {% block body %}
            
        {% endblock %}

        <footer class="bg-dark text-center text-white">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: Social media -->
            <section class="mb-4">
            {% for social in globals.social %}
            {% if social.facebook != null %}
            <!-- Facebook -->
            <a class="btn btn-outline-light btn-floating m-1" href="{{ social.facebook }}" role="button"
                ><i class="fab fa-facebook-f"></i
            ></a>
            {% endif %}

            {% if social.twitter != null %}
            <!-- Twitter -->
            <a class="btn btn-outline-light btn-floating m-1" href="{{ social.twitter }}" role="button"
                ><i class="fab fa-twitter"></i
            ></a>
            {% endif %}

            {% if social.instagram != null %}
            <!-- Instagram -->
            <a class="btn btn-outline-light btn-floating m-1" href="{{ social.instagram }}" role="button"
                ><i class="fab fa-instagram"></i
            ></a>
            {% endif %}

            {% if social.linkedin != null %}
            <!-- Linkedin -->
            <a class="btn btn-outline-light btn-floating m-1" href="{{ social.linkedin }}" role="button"
                ><i class="fab fa-linkedin-in"></i
            ></a>
            {% endif %}

            {% endfor %}
            </section>
            <!-- Section: Social media -->
        </div>
        <!-- Grid container -->

        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">

        {% for website in globals.footerMenu %}
            <a href="{{ globals.WebSiteUrl }}{{ website.link }}" class="link-footer">{{ website.button }}</a> {% if website.id != 4 %}|{% endif %}
        {% endfor %}

        <hr class="w-50 m-auto mb-3 mt-3">

            {{ globals.copyright }}

        </div>

        <button type="button" class="btn btn-primary btn-floating btn-lg" id="back-to-top">
            <i class="fas fa-arrow-up"></i>
        </button>

        <!-- Copyright -->
        </footer>

        {{ include('component/cookie.html.twig') }}

        <script src="{{ globals.WebSiteUrl }}js/9d1d83a1dd.js" crossorigin="anonymous"></script>
        <script src="{{ globals.WebSiteUrl }}js/jquery.min.js"></script>
        <script type="text/javascript" src="{{ globals.WebSiteUrl }}js/MaxLength.min.js"></script>
        <script src="{{ globals.WebSiteUrl }}js/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="{{ globals.WebSiteUrl }}js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
        <script src="{{ globals.WebSiteUrl }}js/select2.min.js"></script>
        <!-- MDB -->
        <script
        type="text/javascript"
        src="{{ globals.WebSiteUrl }}js/mdb.min.js"
        ></script>
        <!-- DateÂ§TimePicker -->
        <script type="text/javascript" src="{{ globals.WebSiteUrl }}js/DateTimePicker.js"></script>
        <!-- For i18n Support -->
        <script type="text/javascript" src="{{ globals.WebSiteUrl }}js/i18n/DateTimePicker-i18n-fr.js"></script>
        <script src="{{ asset('build/app.js') }}"></script>
        {% block javascripts %}
        {% endblock %}

    </body>
</html>
