<div class="card card-per shadow-sm">
  {% if property.picture %}
    <div alt="card-img-top" style="background: url('{{ vich_uploader_asset(property.picture, 'imageFile') }}'); background-position: center; width: 100%; height:210px;"></div>
    {% else %}
      <img src="{{ '/images/empty.jpg' }}" alt="card-img-top" style="width: 100%; height:auto;">
  {% endif %}
  <div class="card-body">
    <h5 class="card-title">
      <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
        {{ property.title }}
      </a>
    </h5>
    <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})</p>
    <p>Mise en ligne par {{ property.createdBy }}</p>
    <p>{% if property.sold == 0 %}<i class="fas fa-check text-success"></i> Disponible{% else %}<i class="fas fa-times text-danger"></i> Vendu{% endif %}</p>
    <div class="text-success card-foot mb-3">
      {{ property.formattedPrice }} €
    </div>
    <div class="d-flex justify-content-between align-items-center mt-2">
      <div class="btn-group">
        <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}" class="btn btn-outline-info nav-link text-black text-bold">Voir le bien</a>
      </div>
    </div>
  </div>
</div>