<div class="card card-per shadow-sm">
  {% if property.picture %}
    <img src="{{ vich_uploader_asset(property.picture, 'imageFile') }}" alt="card-img-top" style="width: 100%; height:auto;">
    {% else %}
      <img src="{{ '/images/empty.jpg' }}" alt="card-img-top" style="width: 100%; height:auto;">
  {% endif %}
  <div class="card-body">
    <h5 class="card-title">
      <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
        {{ property.title }}
      </a>
    </h5>
    <p class="card-text">{{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})</p>
    <div class="text-success card-foot mb-3">
      {{ property.formattedPrice }} €
    </div>
    <div class="d-flex justify-content-between align-items-center mt-2">
      <div class="btn-group">
        <a href="" class="btn btn-outline-info nav-link text-black text-bold">Voir le bien</a>
      </div>
    </div>
  </div>
</div>