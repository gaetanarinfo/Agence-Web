<div class="card card-per shadow-sm">
  {% if appartementA.picture %}
    <div style="background: url('{{ vich_uploader_asset(appartementA.picture, 'imageFile') }}'); background-position: center; width: 100%; height:210px;"></div>
    {% else %}
      <img src="{{ '/images/empty.jpg' }}" alt="card-img-top" style="width: 100%; height:auto;">
  {% endif %}
  <div class="card-body">
    <h5 class="card-title">
      <a href="{{ path('rent.show', {slug: appartementA.slug, id: appartementA.id}) }}">
        {{ appartementA.title }}
      </a>
    </h5>
    <p class="card-text">{{ appartementA.surface }} m² - {{ appartementA.city }} ({{ appartementA.postalCode }})</p>
    <p>Mise en ligne par {{ appartementA.createdBy }}</p>
    <p>{% if appartementA.sold == 0 %}<i class="fas fa-check text-success"></i> Disponible{% else %}<i class="fas fa-times text-danger"></i> Louer{% endif %}</p>
    <div class="text-success card-foot mb-3">
      {{ appartementA.formattedPrice }} €
    </div>
    <div class="d-flex justify-content-between align-items-center mt-2">
      <div class="btn-group">
        <a href="{{ path('appartementA.show', {slug: appartementA.slug, id: appartementA.id}) }}" class="btn btn-outline-info nav-link text-black text-bold">Voir l'appartement</a>
      </div>
    </div>
  </div>
</div>