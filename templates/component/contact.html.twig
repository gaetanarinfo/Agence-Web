
<div class="container">
    <!--Section: Contact v.2-->
    <section class="mb-4">

        <!--Section heading-->
        <h2 class="h1-responsive font-weight-bold text-center my-4">Nous contacter</h2>
        <!--Section description-->
        <p class="text-center w-responsive mx-auto mb-5">Avez-vous des questions ? N'hésitez pas à nous contacter directement. <br/> Notre équipe reviendra vers vous dans les
             meilleurs délais pour vous aider.</p>

        <div class="row">

            <!--Grid column-->
            <div class="col-md-9 mb-md-0 mb-5">
                {{ form_start(form) }}

                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-4">
                            <div class="md-form mb-0">
                                <label for="lastname" class="">Votre nom</label>
                                {{ form_row(form.lastname) }}
                            </div>
                        </div>
                        <!--Grid column-->

                        <!--Grid column-->
                        <div class="col-md-4">
                            <div class="md-form mb-0">
                                <label for="firstname" class="">Votre prénom</label>
                                {{ form_row(form.firstname) }}    
                            </div>
                        </div>
                        <!--Grid column-->

                        <!--Grid column-->
                        <div class="col-md-4">
                            <div class="md-form mb-0">
                                <label for="categorie" class="">Catégorie</label>
                                {{ form_row(form.categorie) }}    
                            </div>
                        </div>
                        <!--Grid column-->

                    </div>
                    <!--Grid row-->

                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <label for="email" class="">Votre adresse email</label>
                                {{ form_row(form.email) }}
                            </div>
                        </div>
                        <!--Grid column-->

                        <div class="col-md-6">
                            <div class="md-form mb-0">
                                <label for="subject" class="">Votre sujet</label>
                                {{ form_row(form.subject) }}
                            </div>
                        </div>
                    </div>
                    <!--Grid row-->

                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-12">

                            <div class="md-form">
                                <label for="message">Votre message</label>
                                {{ form_row(form.content) }}
                            </div>

                        </div>
                    </div>
                    <!--Grid row-->

                <div class="text-center text-md-left">
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </div>
                {{ form_end(form) }}

            </div>
            <!--Grid column-->

            <!--Grid column-->
            <div class="col-md-3 text-center">
                <ul class="list-unstyled mb-0">
                {% for contact in globals.contact %}
                    <li><i class="fas fa-map-marker-alt fa-2x"></i>
                        <p>
                        {% if contact.address != null %}
                            {{ contact.address }}, 
                        {% endif %}
                         {% if contact.postalCode != null %}
                            {{ contact.postalCode }}, 
                        {% endif %}    
                         {% if contact.city != null %}
                            {{ contact.city }}
                        {% endif %}    
                        </p>
                    </li>

                    <li><i class="fas fa-phone mt-4 fa-2x"></i>
                        <p>0{{ contact.phone }}</p>
                    </li>

                    <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                        <p>{{ contact.email }}</p>
                    </li>
                {% endfor %}   
                </ul>
            </div>
            <!--Grid column-->

        </div>

    </section>
    <!--Section: Contact v.2-->
</div>    